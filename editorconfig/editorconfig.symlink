# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
max_line_length = 80
trim_trailing_whitespace = True
insert_final_newline = True

[Makefile]
indent_style = tab

[*.{yml,yaml,yml.tmpl,toml,json,md}]
indent_style = space
indent_size = 2
